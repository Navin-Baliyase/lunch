<%= form_tag(employees_path, method: "new") do %>
<p>
  <%= label_tag :name %><br />
  <%= text_field_tag "employee[name]" %>
</p>
<p>
  <%= label_tag :email %><br />
  <%= text_field_tag "employee[email]" %>
</p>
<p>
  <%= label_tag :password %><br />
  <%= password_field_tag "employee[password]" %>
</p>
<p class="button"><%= submit_tag "Submit", {:class=>"btn btn-success"} %></p>
<% end %>